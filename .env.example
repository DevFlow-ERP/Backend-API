# ============================================
# DevFlow ERP Backend Environment Variables
# Copy this file to .env and fill in the values
# ============================================

# ============================================
# Application Settings
# ============================================
APP_NAME=DevFlow ERP
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# Database Configuration
# ============================================
# Development (local)
DATABASE_URL=postgresql+psycopg://devflow:devflow_password@localhost:5432/devflow_erp

# Production (use strong password)
# DATABASE_URL=postgresql+psycopg://username:strong_password@host:port/database

# Docker Compose (when using docker-compose.yml)
# DATABASE_URL=postgresql+psycopg://devflow:devflow_password@postgres:5432/devflow_erp

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0

# Production (with password)
# REDIS_URL=redis://:password@host:6379/0

# Docker Compose
# REDIS_URL=redis://redis:6379/0

# ============================================
# Security Settings
# ============================================
# Generate a secure secret key using:
# openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production-min-32-chars

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Authentik Integration
# ============================================
AUTHENTIK_URL=http://localhost:9000
AUTHENTIK_TOKEN=your-authentik-api-token-here

# Production example:
# AUTHENTIK_URL=https://auth.yourdomain.com
# AUTHENTIK_TOKEN=tok_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# CORS Settings
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Production example:
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ============================================
# PostgreSQL Settings (for docker-compose.prod.yml)
# ============================================
POSTGRES_USER=devflow
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_DB=devflow_erp

# ============================================
# Redis Password (for docker-compose.prod.yml)
# ============================================
REDIS_PASSWORD=change-this-redis-password-in-production
